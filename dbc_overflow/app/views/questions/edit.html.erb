<h1>Edit your question</h1>
<%= form_for @question, url: { action: "update" }, html: {class: "question_form"} do |f|%>
  <%= f.label :title %><br>
  <%= f.text_area :title, size: "60x1" %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body, size: "60x18" %><br>
  <%= f.submit "Create" %>
<% end %>