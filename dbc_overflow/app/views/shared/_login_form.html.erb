<div class="create_user">
  <h2>Sign Up</h2>
  <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation , 'Password Confirmation'%>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit 'Signup' %>
  <% end %>
</div>

