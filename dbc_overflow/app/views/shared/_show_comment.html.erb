
<div class="comment">
  <div class="comment_votes votes">
    <div class="upvote">
      <%= link_to(image_tag('comment_uparrow.png'), comment_upvote_path(comment), method: 'POST', remote: true) %>
    </div>
    <div class="vote-count">
      <%= comment.votecount %>
    </div>
    <div class="downvote">
      <%= link_to(image_tag('comment_downarrow.png'), comment_downvote_path(comment), method: 'POST', remote: true) %>
    </div>
  </div>

  <div class="comment_body">
    <%= comment.body %><br>
     - <%= comment.user.username %>
    <% if @user == comment.user_id %>
      <%= link_to 'edit', polymorphic_url([comment.commentable, comment], action: 'edit') %>
      <%= link_to 'delete', comment, method: 'delete' %>
    <% end %>
  </div>


</div>